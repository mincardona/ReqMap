{
	"manifest_version": 2,
	
	"name": "ReqMap",
	"description": "This extensions aggregates and exports geographic IP request data.",
	"version": "0.0",
	
	"background": {
		"scripts": ["js/events.js"],
		"persistent": true
	},
	
	"browser_action": {
		"default_icon": "icon19.png",
		"default_popup": "popup.html",
		"default_title": "ReqMap"
	},
    
    "icons": {
        "16":"icon16.png",
        "48":"icon48.png",
        "128":"icon128.png"
    },
	
	"permissions": [
		"webRequest",
		"activeTab",
		"storage",
		"http://*/*",
		"https://*/*"
	]
}